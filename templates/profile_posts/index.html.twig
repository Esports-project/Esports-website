{% extends 'base.html.twig' %}

{% block title %}ProfilePosts index{% endblock %}

{% block body %}
    <h1>ProfilePosts index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profile_post in profile_posts %}
            <tr>
                <td>{{ profile_post.id }}</td>
                <td>{{ profile_post.content }}</td>
                <td>{{ profile_post.image }}</td>
                <td>
                    <a href="{{ path('app_profile_posts_show', {'id': profile_post.id}) }}">show</a>
                    <a href="{{ path('app_profile_posts_edit', {'id': profile_post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_profile_posts_new') }}">Create new</a>
{% endblock %}
